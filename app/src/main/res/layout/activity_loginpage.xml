<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginpageActivity"
    android:orientation="vertical"
    android:weightSum="3">
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginBottom="2dp">
        
        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/infinity_logo"
            android:background="@drawable/round_corners_black"
            android:layout_marginBottom="2dp"
            android:transitionName="myimage"/>
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundcorner_gray"
            android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/round_corners"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="30dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:src="@drawable/india"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91"
                android:layout_gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/edtmobilenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="enter number"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/black"
                android:maxLength="10"
                android:digits="0123456789"
                android:focusableInTouchMode="true"/>
        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom">

        <Button
            android:id="@+id/btnloginto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corners_black"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="LogIn"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:transitionName="btn"
            android:foreground="@drawable/ripple"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>